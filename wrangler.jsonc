/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "linkstracker",
	"main": "src/index.ts",
	"compatibility_date": "2025-08-21",
	"observability": {
		"enabled": true
	},
	"routes": [
		{
			"pattern": "aka.stefanomitello.dev",
			"custom_domain": true
		},
		{
			"pattern": "link.stefanomitello.dev",
			"custom_domain": true
		}
	],
	"d1_databases": [
		{
			"binding": "DB",
			"database_name": "link-tracker-db",
			"database_id": "75df6c2d-2507-4ef8-9985-34939f906f52"
		}
	],
	"assets": {
		"binding": "ASSETS",
		"directory": "./public"
	},
	"vars": {
		"BASIC_AUTH_USER": "admin",
		"BASIC_AUTH_PASS": "password"
	}
}
